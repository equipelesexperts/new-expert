{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{parent()}}
{% endblock stylesheets %}

{% block body %}
    {{parent()}}

<form class="form-horizontal"  action="{{ path('administration_user_add') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" name="us">
    <fieldset >
        <legend>S'inscrire</legend>
        <div class="container well">
            <fieldset><legend></legend>
                
                
                <div class="form-group">
                    <label  class="col-sm-2 col-md-4  control-label champObligatoire">Login</label>
                    <div class="col-sm-10 col-md-4">
                        
                {{form_widget(form.username, {'attr':{'class':'form-control '} })}}
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-sm-2 col-md-4  control-label champObligatoire">Email</label>  
                    <div class="col-sm-10 col-md-4">
                {{form_widget(form.email, {'attr':{'class':'form-control '} })}}
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-sm-2 col-md-4  control-label champObligatoire">Mot de passe</label>
                    <div class="col-sm-10 col-md-4">
                {{form_widget(form.password.first, {'attr':{'class':'form-control '} })}}
                    </div>
                    <div class="col-xs-12 col-md-4">
                {{form_errors(form.password.first)}}
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-sm-2 col-md-4  control-label champObligatoire">Confirm</label>  
                    <div class="col-sm-10 col-md-4">
                {{form_widget(form.password.second, {'attr':{'class':'form-control '} })}}
                    </div>
                    <div class="col-sm-12 col-md-4">
                 {{form_errors(form.password.second)}}
                    </div>
                </div>
                            </fieldset>
        </div>    
                 <div class='hidden hide'> {{ form_rest(form) }}</div>
        <div class="form-group ">
            <div class="col-md-4 col-md-offset-5">
                <input class=" btn  btn-success "  type="submit" value="Enregistrer">

                <a class="btn btn-default " href="{{ path('administration_acceuil_homepage') }}">
                    Annuler

                </a>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock javascripts %}    